<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/list_selector">

    <TextView
        android:id="@+id/announcement_title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/announcement_branch"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dept:"
        android:layout_below="@id/announcement_title"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/announcement_advisor"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Dr. Khalili"
        android:layout_below="@id/announcement_branch"
        android:visibility="visible"/>




    <TextView
        android:id="@+id/announcement_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/announcement_branch"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/announcement_advisor"
        android:layout_marginRight="10dp"
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        android:text="DATE"
        android:textStyle="bold"/>

</RelativeLayout>