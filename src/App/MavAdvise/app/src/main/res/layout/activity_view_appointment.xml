<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.mavadvise.activities.ViewAppointment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorAccent" />

    <TextView
        android:id="@+id/vApptNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textAllCaps="true"
        android:textColor="#000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/vApptName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Will Smith"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/vApptSlotLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slot No."
        android:textAllCaps="true"
        android:textColor="#000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/vApptSlot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/vApptReasonLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appointment Reason"
        android:textAllCaps="true"
        android:textColor="#000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/vApptReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GMAP"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/vApptStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textAllCaps="true"
        android:textColor="#000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/vApptStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCHEDULED"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/vApptCancelBT"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Cancel Appointment"
        android:layout_marginTop="50dp"
        android:textColor="#FFF"
        android:background="@color/colorAccent"/>
</LinearLayout>
