<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/announcement_linear_layout">



                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="Start Date"
                    android:layout_marginTop="10dp"
                    android:id="@+id/start_date_announcement"
                    android:layout_marginLeft="10dp"/>

                <ImageButton
                    android:id="@+id/imageCalender1"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignTop="@id/start_date_announcement"
                    android:layout_alignBottom="@id/announcement_list"
                    android:src="@drawable/calender_icon" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="End Date"
                    android:layout_marginTop="10dp"
                    android:id="@+id/end_date_announcement"
                    android:layout_alignBaseline="@id/start_date_announcement"/>

                <ImageButton
                    android:id="@+id/imageCalender2"
                    android:layout_width="30dp"

                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignBaseline="@id/start_date_announcement"
                    android:src="@drawable/calender_icon" />

                <Spinner
                    android:id="@+id/spinner_branch_announcement"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:layout_marginRight="10dp"
                    android:layout_alignBaseline="@id/start_date_announcement"
                    android:baselineAlignBottom="@id/announcement_list"/>

            </LinearLayout>

            <ListView
                android:id="@+id/announcement_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/announcement_linear_layout"
                android:divider="@color/colorAccent"
                android:dividerHeight="2px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/announcement_button_layout"
                android:visibility="false"
                android:layout_below="@id/announcement_list">

                <Button
                    android:id="@+id/show_announcementBTN"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/colorAccent"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:text="My Announcements"
                    android:layout_marginBottom="30dp"/>

                <Button
                    android:id="@+id/create_announcementBTN"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/show_announcementBTN"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/colorAccent"
                    android:text="Create New"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:layout_marginBottom="30dp"
                    android:layout_alignParentEnd="true"/>


            </LinearLayout>
        </RelativeLayout>

    </ScrollView>





</RelativeLayout>
