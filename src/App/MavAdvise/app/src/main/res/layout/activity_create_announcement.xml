<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/titleET_createAnnouncement"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="21dp"
        android:inputType="textMultiLine"
        android:hint="Type your message here"
        android:id="@+id/messageET_createAnnouncement"
        android:layout_below="@+id/titleET_createAnnouncement"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/postannouncemenntBTN"
        android:layout_below="@id/messageET_createAnnouncement"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorAccent"
        android:text="Post Announcement"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>